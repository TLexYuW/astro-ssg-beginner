---
// astro library
import { Icon } from "astro-icon";

// component
import Link from "./Link.astro";

// data
import navData from "../data/navData";
---

<nav aria-label="Primary">
  <div class="navbar">
    <a href="/" class="logomark" aria-label="Go home"
      ><Icon name="go-fuzz" width="60" />
    </a>
    <ul>
      <!-- {navData.map((item) => <a href={item.path}> {item.name} </a>)} -->
      {
        navData.map((item) => (
          <Link
            text={item.name}
            href={item.path}
            style="primary"
            isFilled={false}
            data-navlink
          />
        ))
      }
    </ul>
  </div>
</nav>

<script>
  import "../js/nav.js";
</script>
