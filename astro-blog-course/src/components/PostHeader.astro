---
import { Image } from "@astrojs/image/components";

import { slugify, formatDate } from "../js/utils";

const { title, date, category, author, image } = Astro.props;
---

<header>
  <div class="container">
    <a href={`/categroy/${slugify(category)}`} class="badge">{category}</a>
    <h1 class="h2">{title}</h1>
    <p>
      by <a href={`/author/${slugify(author)}`}>{author}</a>ã€‚{formatDate(date)}
    </p>
  </div>
  <Image
    src={image.src}
    alt={image.alt}
    width="1200"
    height="600"
    format="avif"
    fit="cover"
    quality={80}
    aspectRatio="5:2"
    class="hero-image"
  />
</header>
