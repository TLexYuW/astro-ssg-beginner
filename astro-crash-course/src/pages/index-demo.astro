---
const name = "Astro Practice";
const style = "purple";
const response = await fetch(
	"https://jsonplaceholder.typicode.com/users?_limit=10"
);
const users = await response.json();
// const users = ["Lex", "Clark", "Wayne", "Bard"];
const visible = false;
---

<>
	<h1 class={style}>Hello {name}</h1>

	<ul>
		<!-- {users.map((user) => <li>{user}</li>)} -->
		{users.map((user) => <li>{user.name}</li>)}
	</ul>

	{visible && <p>I'm am visible</p>}
</>

<style>
	h1 {
		color: red;
	}

	.purple {
		color: purple;
	}
</style>
